{
  "manifest_version": 3,
  "name": "KaniAI",
  "version": "1.0.1",
  "description": "Adds mnemonic images to WaniKani lessons and reference pages.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.wanikani.com/*"
      ]
    }
  ]
}
