{
  "manifest_version": 3,
  "name": "Mnemonic Visualizer",
  "version": "1.0",
  "description": "Adds visuals to WaniKani Pages",

  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "css": ["styles.css"],
      "js": ["scripts/content.js"],
      "matches": [
        "https://www.wanikani.com/*"
    ],
    "run_at": "document_end"
    }
  ]
}
